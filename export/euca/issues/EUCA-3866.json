an.net%2Fsecure%2Fuseravatar%3Fsize%3Dsmall%26ownerId%3Dmmunn1%26avatarId%3D11300%26noRedirect%3Dtrue","16x16":"https://avatar-cdn.atlassian.com/6638eee119e9c0bdcca16883c5415349?s=16&d=https%3A%2F%2Feucalyptus.atlassian.net%2Fsecure%2Fuseravatar%3Fsize%3Dxsmall%26ownerId%3Dmmunn1%26avatarId%3D11300%26noRedirect%3Dtrue","32x32":"https://avatar-cdn.atlassian.com/6638eee119e9c0bdcca16883c5415349?s=32&d=https%3A%2F%2Feucalyptus.atlassian.net%2Fsecure%2Fuseravatar%3Fsize%3Dmedium%26ownerId%3Dmmunn1%26avatarId%3D11300%26noRedirect%3Dtrue"},"displayName":"Michael Munn","active":true,"timeZone":"America/Los_Angeles"},"updated":"2013-01-09T19:56:56.543-0600","status":{"self":"https://eucalyptus.atlassian.net/rest/api/2/status/6","description":"The issue is considered finished, the resolution is correct. Issues which are closed can be reopened.","iconUrl":"https://eucalyptus.atlassian.net/images/icons/statuses/generic.png","name":"Closed","id":"6","statusCategory":{"self":"https://eucalyptus.atlassian.net/rest/api/2/statuscategory/3","id":3,"key":"done","colorName":"green","name":"Done"}},"components":[{"self":"https://eucalyptus.atlassian.net/rest/api/2/component/10002","id":"10002","name":"Cloud Controller"}],"timeoriginalestimate":null,"customfield_13000":null,"description":"When a cluster controller does not report an instance for a period of time, that instance is moved to \"terminated\" and later removed. If the instance then resumes reporting but the public IP used by the instance is now allocated to the instance owner (but not associated) then the IP is used by the instance but it's state is not updated.\r\n\r\nTo reproduce:\r\n\r\n# euca-run-instance emi-XXXXXXXX\r\n# wait for instance to start and note public IP\r\n# service eucalyptus-nc stop # on NC running the instance\r\n# wait for instance to no longer be reported by euca-describe-instances\r\n# euca-allocate-address # repeat until instances IP is allocated\r\n# service eucalyptus-nc start # on NC running the instance\r\n\r\nWhen the instance is restored check info as below:\r\n\r\n{code}\r\n# euca-describe-instances \r\nRESERVATION\tr-94DE3EA0\t937929680963\tdefault\r\nINSTANCE\ti-42E33B2B\temi-43D23807\t192.168.40.13\t10.211.31.139\trunning\t\t0\t\tm1.small\t2012-10-18T22:40:25.110Z\tPARTI00\teki-27693BC3\teri-9E0739D1\t\tmonitoring-disabled\t192.168.40.13\t10.211.31.139\t\t\tinstance-store\t\t\t\t\t\t\t\t\t\r\n# euca-describe-addresses \r\nADDRESS\t192.168.40.13\tavailable (arn:aws:euare::937929680963:user/admin)\tstandard\r\n{code}\r\n\r\nNote that the address is shown as available though it is in use by an instance.","customfield_13200":null,"customfield_11300":null,"customfield_11500":null,"timetracking":{},"customfield_10401":null,"customfield_10005":null,"customfield_10600":null,"customfield_12900":null,"aggregatetimeestimate":null,"attachment":[],"summary":"Instance restore does not update state for restored public ip","creator":{"self":"https://eucalyptus.atlassian.net/rest/api/2/user?username=sjones","name":"sjones","key":"sjones","accountId":"557058:f5dce1b0-db45-4dd6-a0e8-3cea5effb5ce","avatarUrls":{"48x48":"https://avatar-cdn.atlassian.com/037fddf6d3bf6d691a448e01136f233a?s=48&d=https%3A%2F%2Feucalyptus.atlassian.net%2Fsecure%2Fuseravatar%3FownerId%3Dsjones%26avatarId%3D18300%26noRedirect%3Dtrue","24x24":"https://avatar-cdn.atlassian.com/037fddf6d3bf6d691a448e01136f233a?s=24&d=https%3A%2F%2Feucalyptus.atlassian.net%2Fsecure%2Fuseravatar%3Fsize%3Dsmall%26ownerId%3Dsjones%26avatarId%3D18300%26noRedirect%3Dtrue","16x16":"https://avatar-cdn.atlassian.com/037fddf6d3bf6d691a448e01136f233a?s=16&d=https%3A%2F%2Feucalyptus.atlassian.net%2Fsecure%2Fuseravatar%3Fsize%3Dxsmall%26ownerId%3Dsjones%26avatarId%3D18300%26noRedirect%3Dtrue","32x32":"https://avatar-cdn.atlassian.com/037fddf6d3bf6d691a448e01136f233a?s=32&d=https%3A%2F%2Feucalyptus.atlassian.net%2Fsecure%2Fuseravatar%3Fsize%3Dmedium%26ownerId%3Dsjones%26avatarId%3D18300%26noRedirect%3Dtrue"},"displayName":"Steve Jones","active":true,"timeZone":"America/Los_Angeles"},"subtasks":[],"reporter":{"self":"https://eucalyptus.atlassian.net/rest/api/2/user?username=sjones","name":"sjones","key":"sjones","accountId":"557058:f5dce1b0-db45-4dd6-a0e8-3cea5effb5ce","avatarUrls":{"48x48":"https://avatar-cdn.atlassian.com/037fddf6d3bf6d691a448e01136f233a?s=48&d=https%3A%2F%2Feucalyptus.atlassian.net%2Fsecure%2Fuseravatar%3FownerId%3Dsjones%26avatarId%3D18300%26noRedirect%3Dtrue","24x24":"https://avatar-cdn.atlassian.com/037fddf6d3bf6d691a448e01136f233a?s=24&d=https%3A%2F%2Feucalyptus.atlassian.net%2Fsecure%2Fuseravatar%3Fsize%3Dsmall%26ownerId%3Dsjones%26avatarId%3D18300%26noRedirect%3Dtrue","16x16":"https://avatar-cdn.atlassian.com/037fddf6d3bf6d691a448e01136f233a?s=16&d=https%3A%2F%2Feucalyptus.atlassian.net%2Fsecure%2Fuseravatar%3Fsize%3Dxsmall%26ownerId%3Dsjones%26avatarId%3D18300%26noRedirect%3Dtrue","32x32":"https://avatar-cdn.atlassian.com/037fddf6d3bf6d691a448e01136f233a?s=32&d=https%3A%2F%2Feucalyptus.atlassian.net%2Fsecure%2Fuseravatar%3Fsize%3Dmedium%26ownerId%3Dsjones%26avatarId%3D18300%26noRedirect%3Dtrue"},"displayName":"Steve Jones","active":true,"timeZone":"America/Los_Angeles"},"customfield_10000":"3_*:*_3_*:*_13677152_*|*_10001_*:*_3_*:*_208668974_*|*_10002_*:*_1_*:*_24516191_*|*_10000_*:*_1_*:*_31166_*|*_10006_*:*_1_*:*_0_*|*_10003_*:*_2_*:*_3889790381","customfield_12100":"0|i00u1z:","aggregateprogress":{"progress":0,"total":0},"customfield_10001":"2012-11-15T00:09:39.163-0600","customfield_10002":null,"customfield_10200":null,"customfield_10003":null,"customfield_12500":null,"customfield_10400":null,"customfield_10116":null,"customfield_11600":["mspaulding(mspaulding)","mmunn1(mmunn1)","sjones(sjones)"],"environment":null,"customfield_10117":null,"customfield_11800":null,"customfield_11802":null,"duedate":null,"customfield_11805":null,"customfield_11806":null,"progress":{"progress":0,"total":0},"comment":{"comments":[{"self":"https://eucalyptus.atlassian.net/rest/api/2/issue/16527/comment/35410","id":"35410","author":{"self":"https://eucalyptus.atlassian.net/rest/api/2/user?username=mspaulding","name":"mspaulding","key":"mspaulding","accountId":"557058:fa0a9514-613e-4c4f-8872-2880096382a5","avatarUrls":{"48x48":"https://avatar-cdn.atlassian.com/49cba835af4c73beefe1c9c630cb2021?s=48&d=https%3A%2F%2Feucalyptus.atlassian.net%2Fsecure%2Fuseravatar%3FownerId%3Dmspaulding%26avatarId%3D13100%26noRedirect%3Dtrue","24x24":"https://avatar-cdn.atlassian.com/49cba835af4c73beefe1c9c630cb2021?s=24&d=https%3A%2F%2Feucalyptus.atlassian.net%2Fsecure%2Fuseravatar%3Fsize%3Dsmall%26ownerId%3Dmspaulding%26avatarId%3D13100%26noRedirect%3Dtrue","16x16":"https://avatar-cdn.atlassian.com/49cba835af4c73beefe1c9c630cb2021?s=16&d=https%3A%2F%2Feucalyptus.atlassian.net%2Fsecure%2Fuseravatar%3Fsize%3Dxsmall%26ownerId%3Dmspaulding%26avatarId%3D13100%26noRedirect%3Dtrue","32x32":"https://avatar-cdn.atlassian.com/49cba835af4c73beefe1c9c630cb2021?s=32&d=https%3A%2F%2Feucalyptus.atlassian.net%2Fsecure%2Fuseravatar%3Fsize%3Dmedium%26ownerId%3Dmspaulding%26avatarId%3D13100%26noRedirect%3Dtrue"},"displayName":"Matt Spaulding","active":false,"timeZone":"America/Los_Angeles"},"body":"While the procedure given does succeed, and the public ip is associated with the instance when it is restored, there seems to be another related issue here.\r\n\r\nAfter verifying that the allocated ip address is now associated with the instance, I attempted to disassociate the ip address from the instance. Running \"euca-describe-addresses\" shows that the ip is now available, but the ip assignment to the instance does not change.\r\n\r\nAfter performing the steps in the issue description, do the following:\r\n\r\n1. Show currently allocated addresses:\r\n\r\n{noformat}\r\n[root@eucahost-51-200 ~]# euca-describe-addresses \r\nADDRESS\t192.168.40.61\ti-66F33CC3 (arn:aws:euare::353469754890:user/admin)\tstandard\r\nADDRESS\t192.168.40.62\ti-79CE3FA5 (arn:aws:euare::353469754890:user/admin)\tstandard\r\nADDRESS\t192.168.40.63\tavailable (arn:aws:euare::353469754890:user/admin)\tstandard\r\nADDRESS\t192.168.40.64\tavailable (arn:aws:euare::353469754890:user/admin)\tstandard\r\n{noformat}\r\n\r\n2. Disassociate addresses:\r\n\r\n{noformat}\r\n[root@eucahost-51-200 ~]# euca-disassociate-address 192.168.40.61\r\nADDRESS\t192.168.40.61\r\n[root@eucahost-51-200 ~]# euca-disassociate-address 192.168.40.62\r\nADDRESS\t192.168.40.62\r\n{noformat}\r\n\r\n3. Show allocated addresses again to verify that disassociated addresses are now available again:\r\n\r\n{noformat}\r\n[root@eucahost-51-200 ~]# euca-describe-addresses \r\nADDRESS\t192.168.40.61\tavailable (arn:aws:euare::353469754890:user/admin)\tstandard\r\nADDRESS\t192.168.40.62\tavailable (arn:aws:euare::353469754890:user/admin)\tstandard\r\nADDRESS\t192.168.40.63\tavailable (arn:aws:euare::353469754890:user/admin)\tstandard\r\nADDRESS\t192.168.40.64\tavailable (arn:aws:euare::353469754890:user/admin)\tstandard\r\n{noformat}\r\n\r\n4. Wait until new addresses should have been assigned to the instances and check them to see that the ip addresses have not changed:\r\n\r\n{noformat}\r\n[root@eucahost-51-200 ~]# euca-describe-instances \r\nRESERVATION\tr-5FF24131\t353469754890\tdefault\r\nINSTANCE\ti-79CE3FA5\temi-AEC038A7\t192.168.40.62\t10.210.254.11\trunning\tmatt\t0\t\tm1.small\t2012-11-15T05:54:19.519Z\tPARTI00\teki-EDB13C3A\teri-7E8D3D39\t\tmonitoring-disabled\t192.168.40.62\t10.210.254.11\t\tinstance-store\t\t\t\t\t\t\t\t\t\r\nRESERVATION\tr-C8F63F6D\t353469754890\tdefault\r\nINSTANCE\ti-66F33CC3\temi-AEC038A7\t192.168.40.61\t10.210.254.15\trunning\tmatt\t0\t\tm1.small\t2012-11-15T05:54:19.645Z\tPARTI00\teki-EDB13C3A\teri-7E8D3D39\t\tmonitoring-disabled\t192.168.40.61\t10.210.254.15\t\tinstance-store\t\t\r\n{noformat}","updateAuthor":{"self":"https://eucalyptus.atlassian.net/rest/api/2/user?username=mspaulding","name":"mspaulding","key":"mspaulding","accountId":"557058:fa0a9514-613e-4c4f-8872-2880096382