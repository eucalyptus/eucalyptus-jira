n.net%2Fsecure%2Fuseravatar%3Fsize%3Dxsmall%26ownerId%3Ddmitrii%26avatarId%3D15900%26noRedirect%3Dtrue","32x32":"https://avatar-cdn.atlassian.com/efb56b507e22d4fc0d8d5e900e5651d5?s=32&d=https%3A%2F%2Feucalyptus.atlassian.net%2Fsecure%2Fuseravatar%3Fsize%3Dmedium%26ownerId%3Ddmitrii%26avatarId%3D15900%26noRedirect%3Dtrue"},"displayName":"Dmitrii Calzago","active":false,"timeZone":"America/Los_Angeles"},"customfield_10000":"3_*:*_1_*:*_2087343633_*|*_1_*:*_1_*:*_6282224142_*|*_6_*:*_1_*:*_0","customfield_12100":"0|i00vhr:","aggregateprogress":{"progress":0,"total":0},"customfield_10001":"2012-07-26T11:41:24.669-0500","customfield_10200":null,"customfield_10002":null,"customfield_10003":["Troubleshooting"],"customfield_12500":null,"customfield_10400":null,"customfield_10116":null,"customfield_11600":["dmitrii(dmitrii)","steve(steve)"],"customfield_10117":null,"environment":null,"customfield_11800":null,"customfield_11802":null,"duedate":null,"customfield_11805":null,"customfield_11806":null,"progress":{"progress":0,"total":0},"comment":{"comments":[{"self":"https://eucalyptus.atlassian.net/rest/api/2/issue/14642/comment/30221","id":"30221","author":{"self":"https://eucalyptus.atlassian.net/rest/api/2/user?username=steve","name":"steve","key":"steve","accountId":"557058:5211b5b7-0614-42d9-b9b1-a1b49d2c1280","avatarUrls":{"48x48":"https://avatar-cdn.atlassian.com/ad41036e63928e65038997c0c97cd6e9?s=48&d=https%3A%2F%2Feucalyptus.atlassian.net%2Fsecure%2Fuseravatar%3FavatarId%3D10122%26noRedirect%3Dtrue","24x24":"https://avatar-cdn.atlassian.com/ad41036e63928e65038997c0c97cd6e9?s=24&d=https%3A%2F%2Feucalyptus.atlassian.net%2Fsecure%2Fuseravatar%3Fsize%3Dsmall%26avatarId%3D10122%26noRedirect%3Dtrue","16x16":"https://avatar-cdn.atlassian.com/ad41036e63928e65038997c0c97cd6e9?s=16&d=https%3A%2F%2Feucalyptus.atlassian.net%2Fsecure%2Fuseravatar%3Fsize%3Dxsmall%26avatarId%3D10122%26noRedirect%3Dtrue","32x32":"https://avatar-cdn.atlassian.com/ad41036e63928e65038997c0c97cd6e9?s=32&d=https%3A%2F%2Feucalyptus.atlassian.net%2Fsecure%2Fuseravatar%3Fsize%3Dmedium%26avatarId%3D10122%26noRedirect%3Dtrue"},"displayName":"Steven Fitzgerald","active":false,"timeZone":"America/Los_Angeles"},"body":"We have two major use cases of this that without these changes imposes more work for both local staff and our customers.\n\nFirst, it is common for Support to obtain logs from customers.   We are seeing more and more causes where the Eucalyptus Cloud is used more (a good thing), and consequently the relevant logs files are rotated off to oblivion.   This then induces a follow-on request to the customer (a delay in their eyes) to capture more log files in a hope that we will see the same behavior in the future as we saw in the past.\n\nSecond,  we have an the need to collect streams of log files for secondary purposes (e.g., research into product improvements).   For users that want to contribute these log files, we place a burden on them to copy over log files from the associated log directly to an other location so we can retrieve this files.   Why, because the log rotation is so quick and because of the unpredictable growth of the files implicitly mandates that log files have to copied to another location on a unknown frequency.   If this is not done, the log files are lost.","updateAuthor":{"self":"https://eucalyptus.atlassian.net/rest/api/2/user?username=steve","name":"steve","key":"steve","accountId":"557058:5211b5b7-0614-42d9-b9b1-a1b49d2c1280","avatarUrls":{"48x48":"https://avatar-cdn.atlassian.com/ad41036e63928e65038997c0c97cd6e9?s=48&d=https%3A%2F%2Feucalyptus.atlassian.net%2Fsecure%2Fuseravatar%3FavatarId%3D10122%26noRedirect%3Dtrue","24x24":"https://avatar-cdn.atlassian.com/ad41036e63928e65038997c0c97cd6e9?s=24&d=https%3A%2F%2Feucalyptus.atlassian.net%2Fsecure%2Fuseravatar%3Fsize%3Dsmall%26avatarId%3D10122%26noRedirect%3Dtrue","16x16":"https://avatar-cdn.atlassian.com/ad41036e63928e65038997c0c97cd6e9?s=16&d=https%3A%2F%2Feucalyptus.atlassian.net%2Fsecure%2Fuseravatar%3Fsize%3Dxsmall%26avatarId%3D10122%26noRedirect%3Dtrue","32x32":"https://avatar-cdn.atlassian.com/ad41036e63928e65038997c0c97cd6e9?s=32&d=https%3A%2F%2Feucalyptus.atlassian.net%2Fsecure%2Fuseravatar%3Fsize%3Dmedium%26avatarId%3D10122%26noRedirect%3Dtrue"},"displayName":"Steven Fitzgerald","active":false,"timeZone":"America/Los_Angeles"},"created":"2012-07-26T12:07:06.993-0500","updated":"2012-07-26T12:07:06.993-0500"},{"self":"https://eucalyptus.atlassian.net/rest/api/2/issue/14642/comment/33095","id":"33095","author":{"self":"https://eucalyptus.atlassian.net/rest/api/2/user?username=dmitrii","name":"dmitrii","key":"dmitrii","accountId":"557058:1e0ea807-434b-4b54-967f-1dec4a9ede55","avatarUrls":{"48x48":"https://avatar-cdn.atlassian.com/efb56b507e22d4fc0d8d5e900e5651d5?s=48&d=https%3A%2F%2Feucalyptus.atlassian.net%2Fsecure%2Fuseravatar%3FownerId%3Ddmitrii%26avatarId%3D15900%26noRedirect%3Dtrue","24x24":"https://avatar-cdn.atlassian.com/efb56b507e22d4fc0d8d5e900e5651d5?s=24&d=https%3A%2F%2Feucalyptus.atlassian.net%2Fsecure%2Fuseravatar%3Fsize%3Dsmall%26ownerId%3Ddmitrii%26avatarId%3D15900%26noRedirect%3Dtrue","16x16":"https://avatar-cdn.atlassian.com/efb56b507e22d4fc0d8d5e900e5651d5?s=16&d=https%3A%2F%2Feucalyptus.atlassian.net%2Fsecure%2Fuseravatar%3Fsize%3Dxsmall%26ownerId%3Ddmitrii%26avatarId%3D15900%26noRedirect%3Dtrue","32x32":"https://avatar-cdn.atlassian.com/efb56b507e22d4fc0d8d5e900e5651d5?s=32&d=https%3A%2F%2Feucalyptus.atlassian.net%2Fsecure%2Fuseravatar%3Fsize%3Dmedium%26ownerId%3Ddmitrii%26avatarId%3D15900%26noRedirect%3Dtrue"},"displayName":"Dmitrii Calzago","active":false,"timeZone":"America/Los_Angeles"},"body":"I tried the following with a 3.1.x NC:\n\n{code}\ncp nc.log nc.log.`date +%s` && cat /dev/null >nc.log\n{code}\n\nAnd that worked, in the sense that NC continued writing to the now-empty log file.\n\nSo, if you trigger the above from a cron-job when the size of nc.log is over 30000000 bytes, you should be able to avoid the race condition associated with log rotation. I suggest 30 million bytes because the log file limit (for C components) is hard-coded at 32768000 bytes.","updateAuthor":{"self":"https://eucalyptus.atlassian.net/rest/api/2/user?username=dmitrii","name":"dmitrii","key":"dmitrii","accountId":"557058:1e0ea807-434b-4b54-967f-1dec4a9ede55","avatarUrls":{"48x48":"https://avatar-cdn.atlassian.com/efb56b507e22d4fc0d8d5e900e5651d5?s=48&d=https%3A%2F%2Feucalyptus.atlassian.net%2Fsecure%2Fuseravatar%3FownerId%3Ddmitrii%26avatarId%3D15900%26noRedirect%3Dtrue","24x24":"https://avatar-cdn.atlassian.com/efb56b507e22d4fc0d8d5e900e5651d5?s=24&d=https%3A%2F%2Feucalyptus.atlassian.net%2Fsecure%2Fuseravatar%3Fsize%3Dsmall%26ownerId%3Ddmitrii%26avatarId%3D15900%26noRedirect%3Dtrue","16x16":"https://avatar-cdn.atlassian.com/efb56b507e22d4fc0d8d5e900e5651d5?s=16&d=https%3A%2F%2Feucalyptus.atlassian.net%2Fsecure%2Fuseravatar%3Fsize%3Dxsmall%26ownerId%3Ddmitrii%26avatarId%3D15900%26noRedirect%3Dtrue","32x32":"https://avatar-cdn.atlassian.com/efb56b507e22d4fc0d8d5e900e5651d5?s=32&d=https%3A%2F%2Feucalyptus.atlassian.net%2Fsecure%2Fuseravatar%3Fsize%3Dmedium%26ownerId%3Ddmitrii%26avatarId%3D15900%26noRedirect%3Dtrue"},"displayName":"Dmitrii Calzago","active":false,"timeZone":"America/Los_Angeles"},"created":"2012-10-03T14:49:04.035-0500","updated":"2012-10-03T14:49:04.035-0500"}],"maxResults":2,"total":2,"startAt":0},"votes":{"self":"https://eucalyptus.atlassian.net/rest/api/2/issue/EUCA-2957/votes","votes":4,"hasVoted":false},"customfield_11808":null,"worklog":{"startAt":0,"maxResults":20,"total":0,"worklogs":[]}}}